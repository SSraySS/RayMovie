<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.synology.ssray73.raymovie.MovieDetailActivityFragment"
    android:id="@+id/detail_grid"
    android:useDefaultMargins="true"
    android:columnCount="2"
    android:rowCount="5"
    android:orientation="horizontal">

    <TextView android:id="@+id/detail_movie_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minLines="1"
        android:minHeight="50dp"
        android:background="#42A5F5"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_movie_poster"
            android:minHeight="200dp"
            android:minWidth="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"/>

        <TextView
            android:id="@+id/detail_movie_release"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:minLines="1"
            android:maxHeight="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"/>

        <TextView
            android:id="@+id/detail_movie_rate"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:minLines="1"
            android:maxHeight="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"/>

    <TextView
        android:id="@+id/detail_movie_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:minHeight="50dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowSpan="1"
        android:layout_columnSpan="2"/>

</GridLayout>

